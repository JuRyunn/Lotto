<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstellationActivity">

    <Button
        android:id="@+id/btnGOResultConstell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="로또 번호 확인" />

    <ImageView
        android:id="@+id/ImageConstell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnGOResultConstell"
        app:srcCompat="@drawable/constellation" />

    <TextView
        android:id="@+id/txtConstell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ImageConstell"
        android:layout_alignBottom="@id/ImageConstell"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/ImageConstell"
        android:gravity="center"
        android:text="쌍둥이 자리"
        android:textSize="24sp" />

    <DatePicker
        android:id="@+id/DatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ImageConstell"
        android:layout_marginBottom="125dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />
</RelativeLayout>